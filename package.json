  "license": "MIT",
  "dependencies": {
    "@azure/service-bus": "^7.7.0",
    "@hapi/boom": "10.0.0",
    "@hapi/crumb": "8.0.1",
    "@hapi/hapi": "20.2.2",
    "@hapi/inert": "7.0.0",
    "@hapi/vision": "7.0.0",
    "hapi-pino": "10.1.0",
    "joi": "^17.6.0",
    "nunjucks": "3.2.3"
  },
  "devDependencies": {
    "blipp": "4.0.2",
    "jest": "28.1.3",
    "jest-junit": "14.0.0",
    "nodemon": "2.0.19",
    "standard": "17.0.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
