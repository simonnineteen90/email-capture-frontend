{% extends '_layout.njk' %}

{% block content %}
<div class="container">
  <div class="form-container">
    <h1>Subscribe to the newsletter</h1>
    <form action="/" method="post" novalidate="">
        <div class="input-container">
          <input type="email" name="email" size="30" placeholder="Homer.Simpson@myemail.co.uk" required>
        </div>
        <div class="input-container">
          <input type="string" name="firstName" size="30" placeholder="Homer" required>
        </div>
        <div class="input-container">
          <input type="string" name="lastName" size="30" placeholder="Simpson" required>
          <input type="hidden" name="crumb" value="{{crumb}}"/>
        </div>
      <div> 
        <input type="submit" value="Subscribe!">
      </div>
    </form>
  </div>
</div>
{% endblock %}
